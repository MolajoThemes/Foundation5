$list = '';

if (isset($this->row->locked) && (int) $this->row->locked === 1  && trim($this->row->value) === '') :
    $this->row->type    = 'string';
    $model_name         = ' model_name=' . trim(strtolower($this->row->form_field_name));
elseif (isset($this->row->datalist) && $this->row->datalist <> '') :
    $list               = 'datalist_' . trim(strtolower($this->row->datalist))  . '_' .  trim(strtolower($this->row->name));
else :
    $model_name         = ' model_name=' . trim(strtolower($this->row->form_field_name));
endif;

if ($this->row->even_or_odd == 'odd') : ?>
    <div class="row">
<? endif; ?>
    <div class="large-6 columns">
        <? if ($list === '') : ?>
            {I template=Form_<?= trim(strtolower($this->row->type)); ?> model_type=plugin_data<?= $model_name; ?> I}
        <? else : ?>
            {I template=Form_selectlist model_name=<?= trim($list); ?> I}
        <? endif; ?>
    </div>
<? if ($this->row->even_or_odd == 'odd') : ?>
<? else : ?>
    </div>
<? endif;
